{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "$CONTEXT7_API_KEY"]
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest", "--browser", "chromium", "--isolated"],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "/Users/alevsk/.cache/ms-playwright"
      }
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"]
    },
    "burp": {
      "command": "/run/current-system/sw/bin/java",
      "args": [
          "-jar",
          "/Users/alevsk/Development/burp/mcp-proxy.jar",
          "--sse-url",
          "http://127.0.0.1:9876"
      ]
    }
  }
}
